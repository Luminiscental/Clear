
struct Rect {
    num width;
    num height;

    val display := "Rect(" + str(this.width) + ", " + str(this.height) + "): "
        + "p=" + str(this.perimeter) + ", a=" + str(this.area);

    val perimeter := 2 * this.width + 2 * this.height;
    val area := this.width * this.height;
}

val rect := Rect { width=6, height=3 };
print rect.display;
