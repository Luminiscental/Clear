
func fac(int n) num {
    func helper(int n, num acc) num {
        if (n == 0i) {
            return acc;
        }
        return helper(n - 1i, num(n) * acc);
    }
    return helper(n, 1);
}

val start := clock();
fac(100i);
fac(100i);
