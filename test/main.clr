
func factorial(int n) num {
    if n == 0i {
        return 1;
    }
    return num(n) * factorial(n - 1i);
}

func intDiv(int a, int b) int {
    val aNum = num(a);
    val bNum = num(b);
    val floatDiv = aNum / bNum;
    return int(floatDiv);
}

func digitSum(int n) int {
    if n == 0i {
        return 0i;
    } else if n < 0i {
        print "oh dear";
        return 0i;
    }
    val rest = intDiv(n, 10i);
    val digit = n - rest * 10i;
    return digit + digitSum(rest);
}

print "5! = " + str(factorial(5i));
print "sum of 12345 = " + str(digitSum(12345i));
