
var globalCounter = 0i;

func globalFunc() int {

    val before = globalCounter;
    globalCounter = globalCounter + 1i;
    return before;
}

var aFunc = globalFunc;

func printInfo() int {
    print "aFunc() = " + str(aFunc());
    return 0i;
}

print "== initial global ==";
printInfo();
printInfo();
printInfo();

{
    var localCounter = 0i;

    func localFunc() int {

        val before = localCounter;
        localCounter = localCounter + 1i;
        return before;
    }

    aFunc = localFunc;

    print "== while still local ==";
    printInfo();
    printInfo();
    printInfo();
    printInfo();
}

print "== final global ==";
printInfo();
printInfo();
printInfo();





