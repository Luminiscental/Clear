struct Point {
    int x;
    int y;
}

func point_string(Point point) str {
    return "(" + str(point.x) + ", " + str(point.y) + ")";
}

struct Rectangle {
    Point a;
    Point b;
}

func rect_area(Rectangle rect) int {
    var width = rect.a.x - rect.b.x;
    if width < 0i {
        width = -width;
    }
    var height = rect.a.y - rect.b.y;
    if height < 0i {
        height = -height;
    }
    return width * height;
}

func rect_string(Rectangle rect) str {
    return point_string(rect.a) + "->" + point_string(rect.b);
}

var a = Point(1i, 2i);
val b = Point(2i, 3i);
var rect = Rectangle(a, b);

func print_area() {
    print "Area of rectangle " + rect_string(rect) + " = " + str(rect_area(rect));
}

print_area();

a = Point(-2i, a.y);
rect = Rectangle(a, b);

print_area();

