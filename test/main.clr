// Method Closures:

{
    var counter = 0i;

    struct Incrementor {
        func act() void {
            counter = counter + 1i;
        }
    }

    struct Decrementor {
        func act() void {
            counter = counter - 1i;
        }
    }

    func displayCounter() void {
        print "counter = " + str(counter);
    }

    val inc = Incrementor {};
    val dec = Decrementor {};

    displayCounter();

    print "inc.act();";
    inc.act();
    displayCounter();

    print "inc.act();";
    inc.act();
    displayCounter();

    print "dec.act();";
    dec.act();
    displayCounter();

    print;
}

